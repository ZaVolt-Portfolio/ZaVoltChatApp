{
  "root": true,
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "extends": [
    "plugin:vue/vue3-recommended",
    "eslint:recommended",
    "@vue/typescript/recommended",
    "plugin:prettier-vue/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2023
  },
  "plugins": [],
  "rules": {
    // disable multi word component names
    "vue/multi-word-component-names": "off",
    "no-undef": "off"
  },
  "settings": {
    "prettier-vue": {
        "fileInfoOptions": {
            "ignorePath": ".prettierignore"
        }
    }
  }
}
